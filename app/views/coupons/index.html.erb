<%= javascript_tag :defer => 'defer' do -%>
	$('#current_branch').html('<%= user_session['current_branch'].name %>');
<% end -%>

<h2>Available Coupons</h2>
<div class="span-17">
<table>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Discount</th>
    <th>Start date</th>
    <th>Expiry date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.name %></td>
    <td><%= coupon.amount %></td>
    <td><%= coupon.status %></td>
    <td><%= coupon.discount %></td>
    <td><%= coupon.start_date.strftime("%d-%m-%Y") %></td>
    <td><%= coupon.expiry_date.strftime("%d-%m-%Y") %></td>
    <td><%= link_to 'Details', coupon %></td>
    <td><%= link_to 'Edit', edit_coupon_path(coupon) %></td>
    <td><%= link_to 'Delete', coupon, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Coupon', new_coupon_path %>
</div>
